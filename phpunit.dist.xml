<?xml version="1.0" encoding="UTF-8"?>
<phpunit 
    colors="true"
    stopOnFailure="false"
    bootstrap="tests/bootstrap.php"
    beStrictAboutTestsThatDoNotTestAnything="true">
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="Ion">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
</phpunit>